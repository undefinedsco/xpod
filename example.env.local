  # SQLite 默认路径（已存在则复用）
  CSS_SPARQL_ENDPOINT=sqlite:./data/quadstore.sqlite
  CSS_IDENTITY_DB_URL=sqlite:./data/identity.sqlite

  # 本地 Edge 节点心跳、信令等统统关闭
  XPOD_NODE_ID=
  XPOD_NODE_TOKEN=
  XPOD_NODE_PUBLIC_ADDRESS=
  XPOD_NODE_HEARTBEAT_INTERVAL=

  # 关键开关
  XPOD_EDITION=local
  XPOD_SIGNAL_ENDPOINT=
  XPOD_EDGE_NODES_ENABLED=false

  # 日志等级
  CSS_LOGGING_LEVEL=info
  CSS_SHOW_STACK_TRACE=true

  # 本地文件根目录（/.internal、非 RDF 内容存放位置）
  CSS_ROOT_FILE_PATH=./data
